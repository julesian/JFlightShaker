<Window x:Class="JFlightShaker.UI.ButtonBindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Button"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Button:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="ButtonTextBox" Grid.Row="0" Grid.Column="1" Height="28" Margin="8,0,8,8" Padding="6,0,6,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ListenBtn" Grid.Row="0" Grid.Column="2" Height="28" Content="Listen" Margin="0,0,0,8"/>

        <TextBlock x:Name="TriggerLabel" Grid.Row="1" Grid.Column="0" Text="Trigger:" VerticalAlignment="Center" Margin="0,0,0,8"/>
        <ComboBox x:Name="TriggerCombo" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="28" Margin="8,0,0,8"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelBtn" Content="Cancel" Width="90" Height="28" Margin="0,0,8,0"/>
            <Button x:Name="SaveBtn" Content="Save" Width="90" Height="28"/>
        </StackPanel>
    </Grid>
</Window>
