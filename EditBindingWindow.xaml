<Window x:Class="JFlightShaker.UI.EditBindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Binding"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Device -->
            <TextBlock 
                Grid.Row="0" 
                Grid.Column="0"
                Text="Device:"
                VerticalAlignment="Center"
                Margin="0,0,0,12"
            />
            <ComboBox 
                x:Name="DeviceCombo"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="28"
                VerticalContentAlignment="Center"
                MinWidth="420"
                Margin="8,0,0,12"
            />

            <!-- Type -->
            <TextBlock 
                Grid.Row="1" Grid.Column="0"
                Text="Type:"
                VerticalAlignment="Center"
                Margin="0,0,0,12"
            />
            <ComboBox 
                x:Name="KindCombo"
                Grid.Row="1"
                Grid.Column="1"
                Height="28"
                VerticalContentAlignment="Center"
                Margin="8,0,8,12"
            />
            <Button 
                x:Name="EditControlBtn"
                Grid.Row="1" 
                Grid.Column="2" 
                Content="Edit" 
                Width="90"
                Height="28"
                VerticalContentAlignment="Center"
                Margin="8,0,0,12"
            />

            <!-- Intensity -->
            <TextBlock 
                Grid.Row="4" 
                Grid.Column="0"
                Text="Intensity:"
                VerticalAlignment="Center"
                Margin="0,0,0,12"
            />

            <Grid 
                Grid.Row="4" 
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="8,0,0,12"
            >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="56"/>
                </Grid.ColumnDefinitions>

                <Slider 
                    x:Name="IntensitySlider"
                    Grid.Column="0"
                    Minimum="0"
                    Maximum="1"
                    Value="1"
                    TickFrequency="0.05"
                    IsSnapToTickEnabled="False"
                    VerticalAlignment="Center"
                />

                <TextBlock 
                    x:Name="IntensityValueLabel"
                    Grid.Column="1"
                    Text="1.00"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                />
            </Grid>
        </Grid>
        <!-- Buttons -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
             VerticalAlignment="Bottom">
            <Button 
                x:Name="CancelBtn" 
                Content="Cancel"
                Width="90" 
                Height="28"
                Margin="0,0,8,0"/>
            <Button 
                x:Name="SaveBtn" 
                Content="Save" 
                Width="90" 
                Height="28"
            />
        </StackPanel>
    </Grid>
</Window>
