<Window x:Class="ThrottleShaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThrottleShaker"
        Width="1054"
        Height="600"
        MinWidth="1054"
        MinHeight="600">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="Audio:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="AudioDevices" Width="240"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <TextBlock Text="Throttle:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ThrottleDevices" Width="310" Margin="0,0,12,0"/>

                <TextBlock Text="Stick:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="StickDevices" Width="310"/>
            </StackPanel>
        </Grid>


        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="Last Input:" FontWeight="Bold" Margin="0,0,8,0"/>
                <TextBlock x:Name="LastInputLabel" Text="None"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Button x:Name="StartBtn" Content="Start" Width="80" Margin="0,0,8,0"/>
                <Button x:Name="StopBtn" Content="Stop" Width="80"/>
            </StackPanel>
        </Grid>


        <DataGrid x:Name="BindingsGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Device" Binding="{Binding Device}" Width="2*"/>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="1.2*"/>
                <DataGridTextColumn Header="Effect" Binding="{Binding Effect}" Width="1*"/>
                <DataGridTextColumn Header="Intensity" Binding="{Binding Intensity}" Width="0.7*"/>
                <DataGridTextColumn Header="Live Value" Binding="{Binding ValueText}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
