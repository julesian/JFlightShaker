<Window x:Class="JFlightShaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JFlightShaker"
        Width="1054"
        Height="600"
        MinWidth="1054"
        MinHeight="600">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Audio (left) + Start/Stop (right) -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Audio:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="AudioDevices" Width="340"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="OpenConfigBtn" Content="Open Config Folder" Width="150" Margin="0,0,8,0"/>
                <Button x:Name="StartStopBtn" Content="Start" Width="100"/>
            </StackPanel>
        </Grid>

        <!-- Row 1: Last Input -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Last Input:"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <TextBlock Grid.Column="1"
                       x:Name="LastInputLabel"
                       Text="None"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>
        </Grid>

        <!-- Row 2: Bindings grid + action buttons bottom right -->
        <Grid Grid.Row="2">
            <DataGrid x:Name="BindingsGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserAddRows="False"
                      Margin="0,0,0,32"
                      MouseDoubleClick="BindingsGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Effect" Binding="{Binding EffectName}" Width="2*"/>
                    <DataGridTextColumn Header="Binding" Binding="{Binding BindingText}" Width="3*"/>
                    <DataGridTextColumn Header="Intensity" Binding="{Binding Intensity}" Width="1*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="1.2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                <Button x:Name="UnbindBtn" Content="Unbind" Width="90" Margin="0,0,8,0" IsEnabled="False"/>
                <Button x:Name="EditBtn" Content="Edit" Width="90" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
