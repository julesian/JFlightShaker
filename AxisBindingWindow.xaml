<Window x:Class="JFlightShaker.UI.AxisBindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Axis"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Axis:" VerticalAlignment="Center"/>
        <ComboBox x:Name="AxisCombo" Grid.Row="0" Grid.Column="1" Height="28" Margin="8,0,0,0" Padding="6,0,6,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Min (0..1):" VerticalAlignment="Center" Margin="0,8,0,0"/>
        <TextBox x:Name="MinBox" Grid.Row="1" Grid.Column="1" Height="28" Margin="8,8,0,0" Padding="6,0,6,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Max (0..1):" VerticalAlignment="Center" Margin="0,8,0,0"/>
        <TextBox x:Name="MaxBox" Grid.Row="2" Grid.Column="1" Height="28" Margin="8,8,0,0" Padding="6,0,6,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Invert:" VerticalAlignment="Center" Margin="0,8,0,0"/>
        <CheckBox x:Name="InvertCheck" Grid.Row="3" Grid.Column="1" Margin="8,10,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Axis Input:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="AxisInputLabel" Text="None" VerticalAlignment="Center" Margin="8,10,0,0" TextTrimming="CharacterEllipsis"/>

        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelBtn" Content="Cancel" Width="90" Height="28" Margin="0,0,8,0"/>
            <Button x:Name="SaveBtn" Content="Save" Width="90" Height="28"/>
        </StackPanel>
    </Grid>
</Window>
